# Configuration de sécurité recommandée
# .env.example - Template pour les variables d'environnement

# API France Travail
FRANCE_TRAVAIL_CLIENT_ID=your_client_id_here
FRANCE_TRAVAIL_CLIENT_SECRET=your_client_secret_here
FRANCE_TRAVAIL_BASE_URL=https://entreprise.pole-emploi.fr

# Base de données
DATABASE_URL=postgresql://user:password@localhost:5432/datavizft
MONGODB_URL=mongodb://localhost:27017/datavizft

# Application
APP_ENV=development  # development, staging, production
LOG_LEVEL=INFO       # DEBUG, INFO, WARNING, ERROR
RATE_LIMIT_PER_MINUTE=60
MAX_OFFRES_PER_REQUEST=1000

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_PORT=9090

# CI/CD
GITHUB_TOKEN=your_github_token_here